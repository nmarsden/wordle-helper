{
  "name": "wordle-helper",
  "version": "1.0.0",
  "description": "A tool to help play the [Wordle](https://www.powerlanguage.co.uk/wordle/) game.",
  "targets": {
    "analyze": {
      "distDir": "dist_analyze",
      "engines": {"node": "16.13.2"}
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(ts)$": [
        "babel-jest",
        {
          "configFile": "./babelJest.config.js"
        }
      ]
    }
  },
  "scripts": {
    "start": "parcel serve src/index.html",
    "prebuild": "rm -rf dist",
    "build": "parcel build src/index.html --public-url ./",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "preanalyze": "rm -rf dist_analyze",
    "analyze:targetwords": "parcel build src/analyzeFirstWordsWithTargetWords.ts --target analyze && node dist_analyze/analyzeFirstWordsWithTargetWords.js",
    "analyze:dictwords": "parcel build src/analyzeFirstWordsWithDictionaryWords.ts --target analyze && node dist_analyze/analyzeFirstWordsWithDictionaryWords.js"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.4.6",
    "gh-pages": "^3.2.3",
    "jest": "^27.4.7",
    "parcel": "^2.2.1"
  }
}
